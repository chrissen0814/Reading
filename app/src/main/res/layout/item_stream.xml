<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginLeft="@dimen/card_view_layout_left_right_margin"
    android:layout_marginRight="@dimen/card_view_layout_left_right_margin"
    android:layout_marginTop="@dimen/card_view_layout_top_bottom_margin"
    app:cardElevation="@dimen/card_view_elevation"
    app:cardCornerRadius="@dimen/card_view_coner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_stream_title_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="「丑」了 10 年的 App Store，在 iOS 11 变成了最美的原生应用丨具透"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_stream_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                tools:text="sainho93"/>

            <TextView
                android:id="@+id/item_stream_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                tools:text="18:00"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
